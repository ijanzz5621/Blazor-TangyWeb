<div>
    <h4 class="text-primary pt-3">Another Child Component</h4>
    <input id="nametemp" placeholder="@Placeholder" required="@Required" maxlength="@MaxLength"/>
</div>


@code {
    [Parameter]
    public string? Placeholder { get; set; } = "Please enter name";
    [Parameter]
    public string? Required { get; set; } = "false";
    [Parameter]
    public string? MaxLength { get; set; } = "5";
}
